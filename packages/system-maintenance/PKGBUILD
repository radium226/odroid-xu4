pkgname="${PKGNAME}"
pkgver="${PKGVER}"
pkgrel="${PKGREL}"
arch=('any')

prepare()
{
  echo "BUMP=$( bump_pkgrel )"
}

source=(
  "${pkgname}-${pkgver}.tar.gz"
)

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ls -alrt
  python ./setup.py build
}

package() {
  cd "$startdir"
  python setup.py install --root="$pkgdir/" --optimize=1 --skip-build
  mkdir -p "$pkgdir/usr/lib/systemd/system"
  install -m644 "$startdir/system-maintenance@.service" "${pkgdir}/usr/lib/systemd/system"
  install -m644 "$startdir/system-maintenance@.timer" "${pkgdir}/usr/lib/systemd/system"
}
